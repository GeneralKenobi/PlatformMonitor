<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PlatformMonitor">

	<Color x:Key="White">#FFFFFF</Color>
	<SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>

	<Color x:Key="Gray4">#222222</Color>
	<SolidColorBrush x:Key="Gray4Brush" Color="{StaticResource Gray4}"/>

	<Color x:Key="Gray3">#333333</Color>
	<SolidColorBrush x:Key="Gray3Brush" Color="{StaticResource Gray3}"/>

	<Color x:Key="Gray2">#444444</Color>
	<SolidColorBrush x:Key="Gray2Brush" Color="{StaticResource Gray2}"/>

	<Color x:Key="Gray1">#555555</Color>
	<SolidColorBrush x:Key="Gray1Brush" Color="{StaticResource Gray1}"/>

	<Color x:Key="Red">#BB0000</Color>
	<SolidColorBrush x:Key="RedBrush" Color="{StaticResource Red}"/>

</ResourceDictionary>
